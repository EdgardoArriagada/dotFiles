{
  "permissions": {
    "deny": ["Bash(**/.env)", "Read(**/.env)", "Write(**/.env)"]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "zsb_play ~/.zsh-spell-book/src/media/sounds/aoe_farm.wav"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "zsb_play ~/.zsh-spell-book/src/media/sounds/aoe_gate.wav"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "zsb_play ~/.zsh-spell-book/src/media/sounds/aoe_farm.wav"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "skipDangerousModePermissionPrompt": true
}
